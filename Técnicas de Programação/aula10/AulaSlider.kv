<Tela>:
    r_val:0
    g_val:0
    b_val:0
    BoxLayout:
        orientation: 'vertical'
        id: box
        canvas:
            Color:
                rgba: root.r_val, root.g_val, root.b_val, 1
            Rectangle:
                pos: self.pos
                size: self.size
            
        Slider:
            id: sld1
            min: 0
            max: 1
            on_value: root.r_val = self.value
            
        Slider:
            id: sld2
            min: 0
            max: 1
            on_value: root.g_val = self.value

        Slider:
            id: sld3
            min: 0
            max: 1
            on_value: root.b_val = self.value
             
        
