<Tela>:
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'MANUTENCAO DE FONTES'
        BoxLayout:
            Label:
                text: 'Nome: ' 
            TextInput:
                id: txtNome
                font_size: 20
            Label:
                text: 'Data: '
            TextInput:
                id: txtData
                font_size: 20
        Label:
            text: 'Itens Verificados'
        BoxLayout:
            Label:
                text: '110V'
                color: (0,0.6,0,1)
            Label:
                text: '220V'
                color: (0,0.6,0,1)
            Label:
                text: 'Cooler'
                color: (0.6,0,0.6,1)
            Label:
                text: '-5V'
            Label:
                text: '5V'
                color: (1,0,0,1)
            Label:
                text: '3.3V'
                color: (1,0.5,0,1)
            Label:
                text: '12V'
                color: (1,1,0,1)
            Label:
                text: '-12V'
                color: (0,0,1,1)
        BoxLayout:
            TextInput:
                id: txt110
                font_siza: 20
            TextInput:
                id: txt220
                font_siza: 20
            TextInput:
                id: txtCooler
                font_siza: 20
            TextInput:
                id: txt_5
                font_siza: 20
            TextInput:
                id: txt5
                font_siza: 20
            TextInput:
                id: txt33
                font_siza: 20
            TextInput:
                id: txt12
                font_siza: 20
            TextInput:
                id: txt_12
                font_siza: 20
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                    
                Label:
                    text: 'Obs.: '
                BoxLayout:
                    TextInput:
                        id: txtObs
                        font_size: 20
            BoxLayout:
                Button:
                    id: btnGravar
                    size_hint: None,None
                    height: 50
                    text: 'Gravar'
                    on_press: app.guardar(txtNome.text, txtData.text, txt110.text, txt220.text, txtCooler.text, txt_5.text, txt5.text, txt33.text, txt12.text, txt_12.text, txtObs.text)
                    on_release: txtNome.text =''; txtData.text = ''; txt110.text = ''; txt220.text= ''; txtCooler.text =''; txt_5.text =''; txt5.text =''; txt33.text =''; txt12.text = ''; txt_12.text =''; txtObs.text = ''       
            BoxLayout:
                Label:
                    text: 'Pesquisar'
                TextInput:
                    id: txtPesquisar
                    font_size: 20
                Button:
                    id: btnConfirmar
                    text: 'Confirmar'
                    on_press: app.buscar(resultadoText, txtPesquisar.text)
        Label:

            id: resultadoText
            font_size: 40
            text: 'Resultado da pesquisa: '
            color: (0,0.6,0,1)
            BoxLayout:
                id: boxMostrar
                size_hint_y: None
                orientation: 'vertical'
                height: self.minimum_height
